/* pages/homePage/homePage.wxss */
.container{
  background:#f4f4f4;
  padding: 0rpx;
}
swiper{
  padding: 2rpx;
  width: 100%;
  height:400rpx;
}
swiper image{
  border-color: #000;
  border-radius: 5px;
  width: 94%;
  margin-left: 3%;
  height: 100%;
}

/**=========每日推荐============**/
.welfare-container{
   display: flex;
   flex-direction: column;
   border-top: 2rpx solid #eee;
   border-bottom: 2rpx solid #eee;
    
   margin: 10rpx 0;
   
}
.category-title{
  margin-left: 20rpx;
}
.category-title text {
    font-size: 48rpx;
    color:#000;
}
.line_name text{
 font-size: 32rpx;
 color: rgb(105, 150, 150);
}
.welfares{
  display: flex;
  justify-content: left;
  flex-direction: row;
  flex-wrap: wrap;
  margin:10px 5px;
}
.welfares-good{
  height: 350rpx; 
  width: 47%;
  margin:0px auto;
  margin-bottom: 20px;
  position: relative;
  display: inline-block;
  font-size: 24rpx;
}
.welfares-image{
  height: 250rpx;
  width: 100%;
  display: inline-block;
  border: 1px #eee solid; 
}
.welfares-good .product-name text {
   overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;

     /* 不换行，超出部分隐藏掉,用……代替 
       color: #000;
  height: 60px;
  text-align:left;
   margin: 0px 5px; 
   margin-bottom: 5px; 
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;*/
}
.product-price-wrap .product-price-new{
  color: #e80080;
  margin-left:5px;
  font-weight:900;
}
.product-price-wrap .product-price-old{
  color: #888;
  text-decoration: line-through;
  padding-left: 2px;
}
.product-price-wrap .discount{
  position: absolute;
  right: 5px;
  background-color: #000;
  color: #fff;
}

/*底部结尾*/
.orderbottom-title {
  background: #f4f4f4;
  margin-top: 50rpx;
  text-align: center;
  margin-bottom: 20rpx;
}

.ordermain-title {
  font-size: 34rpx;
  font-weight: bold;
  letter-spacing: 2rpx;
  color: #333;
}